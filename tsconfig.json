{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "preserve",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
